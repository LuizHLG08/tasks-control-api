{
  "compilerOptions": {
    "target": "es2016",
    "experimentalDecorators": true,
    "typeRoots": ["node_modules/@types"],
    "rootDir": "./src",
    "outDir": "./dist",
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,   
    "forceConsistentCasingInFileNames": true,
    "strict": true,  
    "skipLibCheck": true 
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
